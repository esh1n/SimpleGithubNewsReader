<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_medium"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:contentPadding="@dimen/padding_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/image_size_repository_avatar"
            android:layout_height="@dimen/image_size_repository_avatar"
            android:contentDescription="@string/description_repository_avatar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRepositoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_black"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="bold"
                tools:text="sourcecode/repo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="@dimen/padding_small"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_size_small"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tvWatchCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginStart="@dimen/margin_small"
                    android:drawableStart="@drawable/ic_eye"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/padding_small"
                    android:textSize="@dimen/font_size_small"
                    tools:text="100" />

                <TextView
                    android:id="@+id/tvForksCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:drawableStart="@drawable/ic_fork"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/padding_small"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_size_small"
                    tools:text="100" />


                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_size_small"
                    tools:text="Java" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>